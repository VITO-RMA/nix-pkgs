--- a/cmake/modules/packages/FindFreeXL.cmake
+++ b/cmake/modules/packages/FindFreeXL.cmake
@@ -57,11 +57,34 @@
     set(FREEXL_LIBRARIES ${FREEXL_LIBRARY})
     set(FREEXL_INCLUDE_DIRS ${FREEXL_INCLUDE_DIR})
 
+    # Propagate transitive dependencies for static builds.
+    set(_FREEXL_TRANSITIVE_LIBS "")
+    set(_FREEXL_TRANSITIVE_LIBRARY_DIRS "")
+    if(PC_FREEXL_FOUND)
+        if(BUILD_SHARED_LIBS)
+            set(_FREEXL_TRANSITIVE_LIBS ${PC_FREEXL_LIBRARIES})
+            set(_FREEXL_TRANSITIVE_LIBRARY_DIRS ${PC_FREEXL_LIBRARY_DIRS})
+        else()
+            set(_FREEXL_TRANSITIVE_LIBS ${PC_FREEXL_STATIC_LIBRARIES})
+            set(_FREEXL_TRANSITIVE_LIBRARY_DIRS ${PC_FREEXL_STATIC_LIBRARY_DIRS})
+        endif()
+        list(REMOVE_ITEM _FREEXL_TRANSITIVE_LIBS freexl freexl_i)
+    endif()
+
     if(NOT TARGET FREEXL::freexl)
         add_library(FREEXL::freexl UNKNOWN IMPORTED)
         set_target_properties(FREEXL::freexl PROPERTIES
                               INTERFACE_INCLUDE_DIRECTORIES "${FREEXL_INCLUDE_DIR}"
                               IMPORTED_LINK_INTERFACE_LANGUAGES "C"
                               IMPORTED_LOCATION "${FREEXL_LIBRARY}")
+
+        if(_FREEXL_TRANSITIVE_LIBS)
+            set_target_properties(FREEXL::freexl PROPERTIES
+                                  INTERFACE_LINK_LIBRARIES "${_FREEXL_TRANSITIVE_LIBS}")
+            if(_FREEXL_TRANSITIVE_LIBRARY_DIRS)
+                set_target_properties(FREEXL::freexl PROPERTIES
+                                      INTERFACE_LINK_DIRECTORIES "${_FREEXL_TRANSITIVE_LIBRARY_DIRS}")
+            endif()
+        endif()
     endif()
 endif()
